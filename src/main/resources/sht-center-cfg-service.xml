<?xml version="1.0" encoding="UTF-8"?>
<application>
    <extendProperties>
        <properties>sht-center-cfg-jdbc.properties</properties>
        <properties>sht-center-cfg-env.properties</properties>
    </extendProperties>
    <services>
        <DirectoryStoreService>
            <fileStorageHomeDirectory>/home/martin/projects/stock/run/storage/</fileStorageHomeDirectory>
            <temporaryStorageDirectory>/home/martin/projects/stock/run/storage/temporary/</temporaryStorageDirectory>
            <ioBuffereSize>2048</ioBuffereSize>
        </DirectoryStoreService>
        <AuthenticationService>
            <jmxObjectName>topsec.tss.core:type=AuthenticationService</jmxObjectName>
            <uncheckResource>.png,.ico,.bmp,.jpg,.jpeg,.css,.js</uncheckResource>
            <uncheckServlets>
                /login.jsp,/authorize/authentication.login.action,/authorize/authorize.updateCurrentPassword.action,/authorize/authorize.updateUserPassword.action
            </uncheckServlets>
        </AuthenticationService>
        <DataBaseStorageService>
            <driverClass>${jdbc.stock.driverClassName}</driverClass>
            <jdbcUrl>${jdbc.stock.url}</jdbcUrl>
            <user>${jdbc.stock.username}</user>
            <password>${jdbc.stock.password}</password>
            <initialPoolSize>20</initialPoolSize>
            <maxIdleTime>5</maxIdleTime>
            <maxPoolSize>20</maxPoolSize>
            <minPoolSize>5</minPoolSize>
        </DataBaseStorageService>
    </services>
</application>	